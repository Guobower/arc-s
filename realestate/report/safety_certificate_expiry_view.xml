<odoo> 
	<data>

		<!--Template For Safety Certificate Expiry Report-->
		<template id="report_safety_certificate">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="realestate.property_internal_layout"/>
						<div class="page">
							<div class="row">
								<h2>
									<span><center>Safety Certificate Expiry</center></span>
								</h2>
							</div>
							<br /><br/>
							<div class="row mt32 mb32">
								<div class="text-center">
									<strong>From:</strong>
									<span t-esc="formatLang(data['form']['start_date'], date=True)"/>&#160;&#160;&#160;
									<strong>To:</strong>
									<span t-esc="formatLang(data['form']['end_date'], date=True)"/>
								</div>
							</div>
							<br/>
							<table class="table table-condensed">
								<tr style="background-color:#f9f9f9;">
									<td><strong>Certificate</strong></td>
									<td><strong>Property Name</strong></td>
									<td><strong>Contact Person</strong></td>
									<td><strong>Expiry Date</strong></td>
								</tr>
								<tr t-foreach="get_details(data['form']['start_date'],data['form']['end_date'])" t-as="t">
									<td><span t-field="t.name"/></td>
									<td><span t-field="t.property_id.name"/></td> 
									<td><span t-field="t.contact_id.name"/></td>
									<td><span t-esc="formatLang(t.expiry_date,date=True)"/></td>
								</tr>
							</table>
						</div>
					<t t-call="report.external_layout_footer"/>
				</t>
			</t>
		</template>

</data>
</odoo>